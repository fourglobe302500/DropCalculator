{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Drop Table",
  "description": "The loot table of a mob",
  "type": "object",
  "properties": {
    "harvest": {
      "description": "The things that can be harvested from the mob",
      "type": "array",
      "items": {
        "description": "A singular harvestable item",
        "type": "string",
        "pattern": "^(DC\\s*[0-9]+)\\s*\\(((?:[0-9]*d[0-9]+|[0-9]+)(?:\\s*(?:[+\\-*])\\s*(?:[0-9]*d[0-9]+|[0-9]+))*)\\s*\\)\\s*'([^-]*)'\\s*(\\d+(?:cp|sp|ep|gp|pp))$"
      }
    },
    "loot": {
      "description": "The gold that the mob drops",
      "type": "object",
      "properties": {
        "roll": {
          "type": "string",
          "pattern": "^([0-9]*d[0-9]+)$"
        },
        "table": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^([0-9]+(?:-[0-9]+)?)\\s*\\(((?:[0-9]*d[0-9]|[0-9]+)+(?:\\s*[+\\-*]\\s*(?:[0-9]+|[0-9]*d[0-9]+))*)\\)\\s*(cp|sp|ep|gp|pp)$"
          }
        }
      },
      "required": [
        "roll",
        "table"
      ]
    },
    "hoard": {
      "description": "The loot table from a high level mob or boss",
      "type": "object",
      "properties": {
        "money": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^([0-9]*d[0-9]+|[0-9]+)(\\s*([+\\-*])\\s*([0-9]*d[0-9]+|[0-9]+))*\\s*(cp|sp|ep|gp|pp)$"
          }
        },
        "roll": {
          "description": "The dice that must be rolled for the drop table",
          "type": "string",
          "pattern": "^([0-9]*d[0-9]+)$"
        },
        "table": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^([0-9]+(?:-[0-9]+)?\\s*)\\|(?:\\s*(-|\\([0-9]*d[0-9]+\\)~[0-9]+(?:cp|sp|ep|gp|pp)~(?:gems|art))\\s*)\\|(?:\\s*(-|\\([0-9]*d[0-9]+\\)MIT[A-I])\\s*)$"
          }
        }
      },
      "required": [
        "table",
        "roll",
        "money"
      ]
    },
    "equipment": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^((?:[0-9]*d[0-9]|[0-9]+)+(?:\\s*[+\\-*]\\s*(?:[0-9]+|[0-9]*d[0-9]+))*)\\s*('[^']*')$"
      }
    },
    "trinkets": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "meat": {
      "enum": [
        "tiny",
        "small",
        "medium",
        "large",
        "huge",
        "gargantuan",
        "inedible"
      ]
    }
  },
  "required": [
    "harvest",
    "loot",
    "hoard",
    "equipment",
    "meat"
  ]
}